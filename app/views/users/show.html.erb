<% provide(:title, @user.name) %>
<h1>
  <%= @user.name %>
</h1>
<%= @smart_contract.expiry_date %>


<h1>Check your illness</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:user_insurance, url: check_valid_diagnosis_user_path(@user), remote: true, method: :get) do |f| %>

      <div class="field">
      <%= f.label :illness %>
      <%= f.text_field :illness %>
      </div>


      <%= f.submit "Check it covers", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
